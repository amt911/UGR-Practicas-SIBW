{% extends "plantilla.twig" %}

{% block main %}
        <div class="main-portada">
        {% for aux in Productos %}
            <article class="box">
                <section>
                    <a href="producto.php?p={{ aux["ID"] }}">
                        <img src="static/images/{{ aux["Imagenes"] }}"/>
                    </a>
                </section>

                <section class="fondo-azul-claro">
                    <a class="no-underline zona-click" href="producto.php?p={{ aux["ID"] }}">                                        
                        {{ aux["Nombre"] }}
                    </a>
                </section>

                <section class="div-precio fondo-azul-claro">
                    <a class="no-underline zona-click" href="producto.php?p={{ aux["ID"] }}">
                        {{ aux["Precio"]|number_format(2, ",", "") }}â‚¬
                    </a>                    
                </section>
            </article>        
        {% endfor %}
        </div>

        <div id="indice-paginas">
            <div>
                <a class="no-underline zona-click" href="index.php?pagina={{Anterior}}">&#10096</a>
            </div>
            <div id="indice-paginas-numeros">
                {% for i in MinPagina..MaxPagina %}
                    <div><a class="no-underline zona-click" href="index.php?pagina={{ i }}">{{ i }}</a></div>
                {% endfor %}
            </div>
            <div>
                <a class="no-underline zona-click" href="index.php?pagina={{Siguiente}}">&#10097</a>
            </div>
        </div>


{% endblock %}

{% block archivosJS %}
<script src="static/js/portada.js" type="module"></script>
{% endblock %}
